<h1>Stores</h1>

<% if !@stores.blank? %>
  <table>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th></th>
    </tr>
  <% for store in @stores %>
    <tr>
      <td><%= store.name %></td>
      <td><%= store.owner %></td>
      <td><%= link_to 'Show', store %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <p>Doesn't exists stores to show</p>
<% end %>
